<UserControl x:Class="Excel_Database_Migration.Controls.DatabaseAccessControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock 
            Grid.Row="0" Text="Please select from the drop down the column you wish to search from, and enter search criterias in the textbox" 
            VerticalAlignment="Center" HorizontalAlignment="Center"
            FontSize="15"/>

        <Grid Grid.Row="1" Margin="0 10 0 10">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            <ComboBox Grid.Column="0" Grid.Row="0"
                  ItemsSource="{Binding Path=ColumnHeader}"          
                  />
            <TextBox Grid.Column="1" Grid.Row="0"/>
            
            <Button Grid.Column="1" Grid.Row="1" Width="200" Height="50"
                    />
        </Grid>
        
                   
        <DataGrid 
            Grid.Row="2"
            HorizontalAlignment="Stretch"
            ItemsSource="{Binding QueryData}"/>
    </Grid>
</UserControl>
